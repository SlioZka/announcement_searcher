@model testCrud.Models.Announcement
@{
    Layout = null;
    var arr = ViewBag.Array;
}

<!DOCTYPE html>
<html>
<head>
    <title>Деталі</title>
</head>
<body>
    <div>
        <table>
            <tr>
                <td>Назва</td>
                <td>@Html.DisplayFor(modelItem => Model.Title)</td>
            </tr>
            <tr>
                <td>Опис</td>
                <td>@Html.DisplayFor(modelItem => Model.Description)</td>
            </tr>
            <tr>
                <td>Дата</td>
                <td>@Html.DisplayFor(modelItem => Model.Date)</td>
            </tr>
        </table>
    </div>
    <div>
        <p>@Html.ActionLink("Редагувати", "Edit", new { id = Model.Id })</p>
        <p>@Html.ActionLink("Видалити", "Delete", new { id = Model.Id })</p>
        <p><a href="~/">На головну</a></p>
    </div>
    <div>
        <p>Схожі оголошення</p>
        @foreach (var str in ViewBag.Array)
        {
            <a href="~/Home/Details/@str">Схоже оголошення #@str</a> <hr />
        }
    </div>
</body>
</html>